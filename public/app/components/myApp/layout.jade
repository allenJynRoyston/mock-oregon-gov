    // MyOregon
    #id-myOregon.ui.container([ngClass]='{true: "hide"}[_public.isMobile]')
      .space-block-50
      .ui.segment
        h2.ui.header #myOregon  
        h5 
          | Let's celebrate Oregon's beauty. Add #MyOregon to your photos on Instagram for a chance to see them here. Check back often to see if your photos get featured!
        br
        .ui.three.column.grid.stackable.doubling        
            .column(*ngFor="let c of _public.myOregon; let i = index")
              .ui.card.fluid.cursor(ui-modal-action [options]="{selector: '#image-viewer', transition: 'fly left'}", (click)="setModalImage(c)")
                .image
                  img.img-responsive(src='{{c.image}}')
                .content(style='height: 75px')
                  a.header {{c.title}}
                  .meta
                    span.date Taken by: 
                      strong {{c.credit}}

    // #myOregon (MOBILE)
    #id-myOregon([ngClass]='{false: "hide"}[_public.isMobile]')
      .space-block-50
      center
        h2.ui.header #myOregon
        .space-block-10
      .ui.styled.accordion(ui-accordian [options]="{exclusive: false, duration: 250}")
        .title 
          i.dropdown.icon          
          | Check it out!
        .content  
          .image(*ngFor="let c of _public.myOregon; let i = index", ui-modal-action [options]="{selector: '#image-viewer', transition: 'fly left'}", (click)="setModalImage(c)")
            | {{c.title}}
            img.img-responsive(src='{{c.image}}')

  .space-block-100
    
  // FOOTER  
  .ui.inverted.vertical.footer.segment.bg-green
    .ui.center.aligned.container
      .ui.stackable.inverted.divided.grid
        .three.wide.column(*ngFor="let foot of _public.footer")
          h4.ui.inverted.header {{foot.title}}
          .ui.inverted.link.list
            a.item(*ngFor="let l of foot.links; let i = index") 
              | {{l.title}}
      .ui.inverted.section.divider
      img.ui.centered.mini.image(style='width: auto; height: 100%', src='assets/images/logo.png')
      .ui.horizontal.inverted.small.divided.link.list
        a.item(*ngFor="let sf of _public.subFooter; let i = index") 
          | {{sf.title}}



  #image-viewer.ui.modal(ui-modal [options]="{closable: false, transition: 'fly left', duration: 250}")
    i.close.fa.fa-close
    .header {{modalImage.title}}
      small &nbsp; by
        strong &nbsp; {{modalImage.credit}} 
    .image.content
      .image
        img.img-responsive(src="{{modalImage.image}}")
      .description
        | Description of image
