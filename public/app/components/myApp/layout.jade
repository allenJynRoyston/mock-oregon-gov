//output:layout.html
.ui.sidebar.inverted.vertical.menu
  a.item(*ngFor="let nav of _public.navBar")
    | {{nav.title}}
.pusher.dimmed
  // Site content !

  // HEADER (DESKTOP)
  #body-header.ui.fixed.inverted.menu.bg-green.tablet.hidden.mobile.vanish
    .ui.container
      .ui.simple.item
        img.logo(src='assets/images/logo.png' style='width: auto; height: 50px')
      .ui.simple.dropdown.item(*ngFor="let nav of _public.navBar")
        | {{nav.title}} 
        i.dropdown.icon
        .menu
          a.item(*ngFor="let drop of nav.dropdown; let i = index") 
            | {{drop.title}}
          .divider
          .header {{nav.subTitle}}
          .item
            i.dropdown.fa.fa-arrow-circle-o-right
            | &nbsp;&nbsp;Services
            .menu
              a.item(*ngFor="let subDrop of nav.subDropdown; let i = index") 
                | {{subDrop.title}}
      .ui.simple.item
          button.ui.button.brown
            i.fa.fa-book
            | &nbsp; Agency Directory
             
  // TABLET/MOBILE HEADER
  .mobile.or.tablet.only
    .row.bg-green(style='padding: 10px')
      center 
        button.ui.button.circular.inverted.basic(ui-sidebar [options]="{selector: '.sidebar', animation: 'scale down'}")
          i.fa.fa-bars
              
  // RAILS
  .mobile.or.lower.hidden
    .ui.left.dividing.rail.tablet.hidden.mobile.vanish
        #home-main-menu
          p.cursor(*ngFor="let m of _public.mainMenu", (click)="scrollTo(m.scrollTo)")
            i([ngClass]="m.icon")
            | &nbsp;&nbsp;{{m.title}}
    .ui.right.dividing.rail.tablet.hidden.mobile.vanish
        #help-bar
          .ui.search.help-bar-input
            input.prompt(placeholder='Search...')         

   
  // BODY (CONTENT)              
  #body-content.ui.main.text.container(style='min-height: 800px')
    
    

    .mobile.or.tablet.only
      center
        img.logo(src='assets/images/logo.png' style='width: auto; height: 50px')
  
    // TOP SERVICES (DESKTOP)
    #id-top-services.ui.container([ngClass]='{true: "hide"}[_public.isMobile]')
      .space-block-50
      .ui.segment
        h2.ui.header Features
        .ui.three.column.grid.stackable.doubling        
            .column(*ngFor="let c of _public.content; let i = index")
              .ui.card.fluid.cursor
                .blurring.dimmable.image(ui-dimmer [options]="{on: 'hover'}")
                  .ui.dimmer
                    .content
                      .center
                        {{c.meta}}
                  img.img-responsive(src='http://lorempixel.com/300/200/business/{{i + 1}}')
                .content(style='height: 75px')
                  a.header {{c.title}}
    
    // TOP SERVICES (MOBILE)
    #id-top-services([ngClass]='{false: "hide"}[_public.isMobile]')
      .space-block-50
      center
        h2.ui.header Features
        .space-block-10
      .ui.styled.accordion(ui-accordian [options]="{exclusive: false, duration: 250}", *ngFor="let c of _public.content; let i = index")
        .title
          i.dropdown.icon
          | {{c.title}}
        .content  
          a {{c.meta}}
        
        
        
    // MAPS
    #id-maps.ui.container([ngClass]='{true: "hide"}[_public.isMobile]')
      .space-block-50
      .ui.segment
        h2.ui.header Maps
        .ui.one.column.grid.stackable.doubling        
            .column
              .ui.special.cards.cursor
                .card(style='width: 100%')
                  img.img-responsive(src='assets/images/home_map_graphic-lg.jpeg') 

    // MAPS (MOBILE)
    #id-maps([ngClass]='{false: "hide"}[_public.isMobile]')
      .space-block-50
      center
        h2.ui.header Maps
        .space-block-10
      .ui.styled.accordion(ui-accordian [options]="{exclusive: false, duration: 250}")
        .title
          i.dropdown.icon
          | Find Stuff to do in Oregon!
        .content  
          img.img-responsive(src='assets/images/home_map_graphic-lg.jpeg') 

    
    // FEATURES
    #id-features.ui.container([ngClass]='{true: "hide"}[_public.isMobile]')
      .space-block-50
      .ui.segment
        h2.ui.header Features
        .ui.three.column.grid.stackable.doubling        
            .column(*ngFor="let c of _public.features")
              .ui.card.fluid.cursor
                .blurring.dimmable.image(ui-dimmer [options]="{on: 'hover'}")
                  .ui.dimmer
                    .content
                      .center
                        {{c.meta}}
                  img.img-responsive(src='{{c.image}}')
                .content(style='height: 75px')
                  a.header {{c.title}}
                .extra.content
                  | Rating: 
                  .ui.star.rating(ui-rating [options]="{initialRating: c.stars, maxRating: 10, interactive: true}")

    // MAPS (MOBILE)
    #id-features([ngClass]='{false: "hide"}[_public.isMobile]')
      .space-block-50
