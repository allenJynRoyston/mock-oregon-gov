    #id-drivers.ui.container([ngClass]='{true: "hide"}[_public.isMobile]')
      .space-block-50
      .ui.segment
        h2.ui.header Drivers
          .ui.grid.internally.celled.stackable.equal.width
              .column
                button.ui.button.green.fluid            
                  | View All Driver Service
                .mobile.vanish
                  br
                  img.img-responsive(src='assets/images/driver.jpg')
                  br
